{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "composite": true,

    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["vite/client"],

    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "include": [
    ".react-router/types/**/*",
    "src/**/*",
    "workers/**/*",
    "worker-configuration.d.ts"
  ]
}
