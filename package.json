{
  "name": "name-placeholder",
  "version": "0.0.0",
  "private": true,
  "description": "name-placeholder",
  "author": {
    "name": "Erick Christian",
    "email": "erickchristian48@gmail.com"
  },
  "type": "module",
  "scripts": {
    "auth:generate": "bunx @better-auth/cli generate --config ./src/services/auth.ts",
    "build": "react-router build",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply starter-web --local",
    "db:migrate:staging": "wrangler d1 migrations apply <staging-db> --env staging",
    "deploy": "bun run build && wrangler deploy",
    "dev": "react-router dev",
    "lint": "eslint --cache",
    "lint:all": "eslint --cache .",
    "postinstall": "bun run typegen",
    "prepare": "simple-git-hooks",
    "preview": "bun run build && vite preview",
    "test": "vitest",
    "typecheck": "bun run typegen && tsc -b",
    "typegen": "wrangler types && react-router typegen"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "dependencies": {
    "@effect/platform": "^0.90.0",
    "@effect/rpc": "^0.68.2",
    "@effect/sql-d1": "^0.42.0",
    "@effect/sql-drizzle": "^0.43.0",
    "@hono/zod-validator": "^0.7.2",
    "better-auth": "^1.3.4",
    "consola": "^3.4.2",
    "drizzle-orm": "^0.44.4",
    "effect": "^3.17.6",
    "hono": "^4.8.12",
    "isbot": "^5.1.29",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.7.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.0",
    "@echristian/eslint-config": "^0.0.50",
    "@effect/language-service": "^0.34.0",
    "@hono/node-server": "^1.18.1",
    "@libsql/client": "^0.15.10",
    "@opencode-ai/plugin": "^0.3.130",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitest/browser": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.4",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.54.2",
    "simple-git-hooks": "^2.13.1",
    "srvx": "^0.8.5",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1",
    "wrangler": "^4.27.0"
  },
  "trustedDependencies": [
    "simple-git-hooks"
  ]
}
