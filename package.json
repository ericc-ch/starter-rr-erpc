{
  "name": "name-placeholder",
  "version": "0.0.0",
  "private": true,
  "description": "name-placeholder",
  "author": {
    "name": "Erick Christian",
    "email": "erickchristian48@gmail.com"
  },
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply starter-web --local",
    "db:migrate:staging": "wrangler d1 migrations apply <staging-db> --env staging",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "lint": "eslint . --cache",
    "postinstall": "pnpm run typegen",
    "prepare": "simple-git-hooks",
    "preview": "pnpm run build && vite preview",
    "test": "vitest",
    "typecheck": "pnpm run typegen && tsc -b",
    "typegen": "wrangler types &&react-router typegen"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run lint --fix"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4",
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.9.1",
    "@echristian/eslint-config": "^0.0.45",
    "@react-router/dev": "^7.6.3",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^20.19.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/browser": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.53.2",
    "simple-git-hooks": "^2.13.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.0",
    "wrangler": "^4.24.0"
  },
  "packageManager": "pnpm@10.13.1"
}
